<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuario</title>
</head>
<body>  
    <%- include("../partials/cabeçalho.ejs") %>
    <% if(status == 1){ %>
        <div class="cadastrado-alert">
            Usuário feito com sucesso!
        </div>
    <%}
    if(status == 2){ %>
        <div class="deletado-alert">
            Usuário removido com sucesso!
        </div>
    <% } 
    if(status == 3){ %>
        <div class="editado-alert">
            Usuário editado com sucesso!
        </div>
    <% } %>
    <div class="content-listar">
        <% for (const u of VUsuarios) {%>
        <div class="card">
        <div class="card__left">
            <div class="id-absolute">
               <span><%=u.id%></span>     
            </div>
            <img src="img/person.jpg" alt="default">
        </div> 
        <div class="card__right">
            <div class="informacoes">
                <span><%=u.nome%></span>
                <p><%=u.email%></p>
                <p><%=u.senha%></p>
            </div>
            <div class="acoes">
                <div class="icon-detalhar" >
                    <a href="/usuario/<%=u.id%>">
                        <span id="detalhe" class="material-symbols-outlined">
                            visibility
                        </span>
                    </a>
                </div>
                <div class="icon-delete" onclick="return confirm('Você tem certeza que deseja deletar esse Usuario?')">
                    <a href="/usuario/deletar/<%=u.id%>">
                        <span id="delete" class="material-symbols-outlined">
                        delete
                        </span>
                    </a>
                </div>
                <div class="icon-edit">
                    <a href="/usuario/cadastrar/<%=u.id%>">
                        <span id="edit" class="material-symbols-outlined">
                        edit
                        </span>
                    </a>
                </div>    
            </div>
        </div>  
    </div>
    <% } %>
    <div class="espaco-footer"></div>
</body>
<%- include("../partials/rodape.ejs") %>
</html>

         